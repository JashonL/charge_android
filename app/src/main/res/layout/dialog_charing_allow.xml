<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/xa560"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa100"
        android:background="@color/headerView"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/m280允许充电时间"
            android:textColor="@color/black"
            android:textSize="@dimen/xa30" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa80"
        android:layout_marginStart="@dimen/xa30"
        android:layout_marginTop="@dimen/xa30"
        android:layout_marginEnd="@dimen/xa30"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_time"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#ff1e2b3f" />


        <View
            android:id="@+id/line"
            android:layout_width="@dimen/xa68"
            android:layout_height="@dimen/xa10"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/xa30"
            android:layout_marginEnd="@dimen/xa30"
            android:background="@drawable/shape_time_line_bg" />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_time"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#ff1e2b3f" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa2"
        android:layout_marginTop="@dimen/xa60"
        android:background="#E5E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/headerView"
            android:gravity="center"
            android:text="@string/m7取消"
            android:textColor="#666666"
            android:textSize="@dimen/xa30" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/headerView"
            android:gravity="center"
            android:text="@string/m9确定"
            android:textColor="@color/black"
            android:textSize="@dimen/xa30" />

    </LinearLayout>


</LinearLayout>