<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/ll_charged_ele"
                android:layout_width="@dimen/xa330"
                android:layout_height="@dimen/xa140"
                android:background="@drawable/shape_white_corner_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="@dimen/xa10"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintRight_toLeftOf="@+id/ll_charged_rate"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/icon_charged_ele"
                    android:layout_width="@dimen/xa36"
                    android:layout_height="@dimen/xa36"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/xa30"
                    android:src="@drawable/charging_ele" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/xa48"
                    android:layout_toRightOf="@+id/icon_charged_ele"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_ele"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/title_1"
                        android:textSize="@dimen/xa36" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/xa10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/m189已充电量"
                        android:textColor="@color/title_1"
                        android:textSize="@dimen/xa28" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_charged_rate"
                android:layout_width="@dimen/xa330"
                android:layout_height="@dimen/xa140"
                android:layout_marginLeft="@dimen/xa10"
                android:background="@drawable/shape_white_corner_bg"
                app:layout_constraintLeft_toRightOf="@+id/ll_charged_ele"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/icon_charged_rate"
                    android:layout_width="@dimen/xa36"
                    android:layout_height="@dimen/xa36"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/xa30"
                    android:src="@drawable/charging_rate" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/xa48"
                    android:layout_toRightOf="@+id/icon_charged_rate"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_rate"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/title_1"
                        android:textSize="@dimen/xa36" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/xa10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/m152充电费率"
                        android:textColor="@color/title_1"
                        android:textSize="@dimen/xa28" />
                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/ll_charged_time"
                android:layout_width="@dimen/xa330"
                android:layout_height="@dimen/xa140"
                android:background="@drawable/shape_white_corner_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/xa20"
                android:layout_marginRight="@dimen/xa10"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintRight_toLeftOf="@+id/ll_charged_money"
                app:layout_constraintTop_toBottomOf="@+id/ll_charged_rate">

                <ImageView
                    android:id="@+id/icon_charged_time"
                    android:layout_width="@dimen/xa36"
                    android:layout_height="@dimen/xa36"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/xa30"
                    android:src="@drawable/charging_time" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/xa48"
                    android:layout_toRightOf="@+id/icon_charged_time"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/title_1"
                        android:textSize="@dimen/xa36" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/xa10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/m191已充时长"
                        android:textColor="@color/title_1"
                        android:textSize="@dimen/xa28" />
                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/ll_charged_money"
                android:layout_width="@dimen/xa330"
                android:layout_height="@dimen/xa140"
                android:background="@drawable/shape_white_corner_bg"
                app:layout_constraintLeft_toRightOf="@+id/ll_charged_time"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/xa10"
                app:layout_constraintTop_toTopOf="@+id/ll_charged_time">

                <ImageView
                    android:id="@+id/icon_charged_money"
                    android:layout_width="@dimen/xa36"
                    android:layout_height="@dimen/xa36"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/xa30"
                    android:src="@drawable/charging_money" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/xa48"
                    android:layout_toRightOf="@+id/icon_charged_money"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/title_1"
                        android:textSize="@dimen/xa36" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/xa10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/m192消费金额"
                        android:textColor="@color/title_1"
                        android:textSize="@dimen/xa28" />
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/ll_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_charged_money"
                android:layout_marginTop="@dimen/xa10"
                app:layout_constraintTop_toBottomOf="@+id/ll_charged_time">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/m195充电结束提示拔枪"
                    android:textColor="@color/title_3"
                    android:textSize="@dimen/xa28" />

            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
