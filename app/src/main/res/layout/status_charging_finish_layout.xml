<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/ll_charged_ele"
        android:layout_width="@dimen/xa330"
        android:layout_height="@dimen/xa140"
        android:layout_marginLeft="@dimen/xa27"
        android:background="@drawable/shape_white_corner_bg">

        <ImageView
            android:id="@+id/icon_charged_ele"
            android:layout_width="@dimen/xa36"
            android:layout_height="@dimen/xa36"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xa30"
            android:src="@drawable/charging_ele" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xa48"
            android:layout_toRightOf="@+id/icon_charged_ele"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ele"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/title_1"
                android:textSize="@dimen/xa36" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/xa10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="已充电量"
                android:textColor="@color/title_1"
                android:textSize="@dimen/xa28" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_charged_rate"
        android:layout_width="@dimen/xa330"
        android:layout_height="@dimen/xa140"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/xa27"
        android:layout_marginRight="@dimen/xa27"
        android:background="@drawable/shape_white_corner_bg">

        <ImageView
            android:id="@+id/icon_charged_rate"
            android:layout_width="@dimen/xa36"
            android:layout_height="@dimen/xa36"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xa30"
            android:src="@drawable/charging_rate" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xa48"
            android:layout_toRightOf="@+id/icon_charged_rate"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/title_1"
                android:textSize="@dimen/xa36" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/xa10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/m充电费率"
                android:textColor="@color/title_1"
                android:textSize="@dimen/xa28" />
        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_charged_time"
        android:layout_width="@dimen/xa330"
        android:layout_height="@dimen/xa140"
        android:layout_below="@+id/ll_charged_ele"
        android:layout_marginLeft="@dimen/xa27"
        android:layout_marginTop="@dimen/xa30"
        android:background="@drawable/shape_white_corner_bg">

        <ImageView
            android:id="@+id/icon_charged_time"
            android:layout_width="@dimen/xa36"
            android:layout_height="@dimen/xa36"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xa30"
            android:src="@drawable/charging_time" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xa48"
            android:layout_toRightOf="@+id/icon_charged_time"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/title_1"
                android:textSize="@dimen/xa36" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/xa10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="已充时长"
                android:textColor="@color/title_1"
                android:textSize="@dimen/xa28" />
        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_charged_money"
        android:layout_width="@dimen/xa330"
        android:layout_height="@dimen/xa140"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ll_charged_rate"
        android:layout_marginLeft="@dimen/xa27"
        android:layout_marginRight="@dimen/xa27"
        android:layout_marginTop="@dimen/xa30"
        android:background="@drawable/shape_white_corner_bg">

        <ImageView
            android:id="@+id/icon_charged_money"
            android:layout_width="@dimen/xa36"
            android:layout_height="@dimen/xa36"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xa30"
            android:src="@drawable/charging_money" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xa48"
            android:layout_toRightOf="@+id/icon_charged_money"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/title_1"
                android:textSize="@dimen/xa36" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/xa10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="消费金额"
                android:textColor="@color/title_1"
                android:textSize="@dimen/xa28" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
