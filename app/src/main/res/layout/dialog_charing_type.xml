<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/xa560"
    android:layout_height="@dimen/xa320"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/xa20"
        android:gravity="center"
        android:text="@string/m204开始时间"
        android:textColor="@color/black"
        android:textSize="@dimen/xa30"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_start_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa70"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/xa20"
        android:gravity="center"
        android:text="@string/start_immediately"
        android:textColor="@color/black"
        android:textSize="@dimen/xa30" />

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa70"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/xa20"
        android:gravity="center"
        android:text="@string/m178定时"
        android:textColor="@color/black"
        android:textSize="@dimen/xa30" />


</LinearLayout>