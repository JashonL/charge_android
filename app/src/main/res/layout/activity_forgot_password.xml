<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/headerView"
    android:orientation="vertical"
    tools:context="com.growatt.chargingpile.activity.ForgotPasswordActivity">

    <include layout="@layout/header_view_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xa49"
        android:gravity="center"
        android:text="@string/m29发送到邮箱"
        android:textColor="@color/title_1"
        android:textSize="@dimen/xa30"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa90"
        android:layout_marginLeft="@dimen/xa30"
        android:layout_marginRight="@dimen/xa30"
        android:layout_marginTop="@dimen/xa50"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/xa20"
            android:layout_height="@dimen/xa20"
            android:gravity="center"
            android:text="*"
            android:textColor="@color/red_color"
            android:textSize="@dimen/xa15" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/xa20"
            android:layout_height="@dimen/xa24"
            android:src="@drawable/sign_user" />


        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/xa12"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/m25请输入用户名"
            android:textColor="@color/title_2"
            android:textSize="@dimen/xa30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="@dimen/xa30"
        android:layout_marginRight="@dimen/xa30"
        android:background="#dedede"
        android:orientation="vertical" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa90"
        android:layout_marginLeft="@dimen/xa30"
        android:layout_marginRight="@dimen/xa30"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/xa20"
            android:layout_height="@dimen/xa20"
            android:gravity="center"
            android:text="*"
            android:textColor="@color/red_color"
            android:textSize="@dimen/xa15" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/xa20"
            android:layout_height="@dimen/xa24"
            android:src="@drawable/sign_mail" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/xa12"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/m61输入邮箱地址"
            android:inputType="textEmailAddress"
            android:textColor="@color/title_2"
            android:textSize="@dimen/xa30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="@dimen/xa30"
        android:layout_marginRight="@dimen/xa30"
        android:background="#dedede"
        android:orientation="vertical" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa90"
        android:layout_marginLeft="@dimen/xa30"
        android:layout_marginRight="@dimen/xa30"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/xa20"
            android:layout_height="@dimen/xa20"
            android:gravity="center"
            android:textColor="@color/red_color"
            android:textSize="@dimen/xa15" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/xa20"
            android:layout_height="@dimen/xa24"
            android:src="@drawable/sign_phone" />


        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="@dimen/xa12"
            android:gravity="center_vertical"
            android:hint="@string/m104输入电话号码"
            android:inputType="phone"
            android:textColor="@color/title_2"
            android:textSize="@dimen/xa30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="@dimen/xa30"
        android:layout_marginRight="@dimen/xa30"
        android:background="#dedede"
        android:orientation="vertical" />

    <Button
        android:id="@+id/btFinish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa88"
        android:layout_marginLeft="@dimen/xa75"
        android:layout_marginRight="@dimen/xa75"
        android:layout_marginTop="@dimen/xa80"
        android:background="@drawable/selector_circle_btn_green"
        android:text="@string/m3完成"
        android:textColor="@color/headerView" />

</LinearLayout>
