<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa90"
        android:background="@color/headerView"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_key"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/xa30"
            android:layout_marginStart="@dimen/xa30"
            android:layout_marginRight="@dimen/ya30"
            android:layout_weight="2"
            android:gravity="center_vertical|end"
            android:textColor="@color/title_3"
            android:textSize="@dimen/xa30"
            android:layout_marginEnd="@dimen/ya30" />

        <TextView
            android:id="@+id/tv_time_value"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/xa21"
            android:layout_marginRight="@dimen/xa21"
            android:gravity="center_vertical|start"
            android:textColor="@color/title_3"
            android:textSize="@dimen/xa30" />

        <ImageView
            android:id="@+id/iv_more1"
            android:layout_width="@dimen/xa12"
            android:layout_height="@dimen/xa30"
            android:layout_marginEnd="@dimen/xa30"
            android:layout_marginRight="@dimen/xa30"
            android:src="@drawable/charger_device_item_more" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa2"
        android:background="@color/gray_background2" />

</LinearLayout>