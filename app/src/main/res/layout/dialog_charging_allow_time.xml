<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa80"
        android:background="@color/headerView"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/m204开始时间"
            android:textColor="@color/black"
            android:textSize="@dimen/xa30" />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="@dimen/xa23"
            android:layout_height="@dimen/xa24"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/xa24"
            android:layout_marginEnd="@dimen/xa24"
            android:src="@drawable/ic_exit" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_np"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa200"
        android:background="#fff5f6f7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <com.growatt.chargingpile.view.NumberPickerView
                android:id="@+id/np_hour"
                style="@style/number_picker_style_1"
                android:layout_width="@dimen/xa60"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/xa160"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/tv_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/m207时"
                android:textColor="#ff888888"
                android:visibility="visible" />

            <com.growatt.chargingpile.view.NumberPickerView
                android:id="@+id/np_minute"
                style="@style/number_picker_style_1"
                android:layout_width="@dimen/xa60"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/xa160"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/tv_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/m208分"
                android:textColor="#ff888888"
                android:visibility="visible" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xa70"
            android:layout_centerInParent="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ya2"
                android:layout_alignParentTop="true"
                android:background="@color/preset_edit_divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ya2"
                android:layout_alignParentBottom="true"
                android:background="@color/preset_edit_divider" />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa90"
        android:background="@color/headerView"
        android:gravity="center"
        android:text="@string/m3完成"
        android:textColor="#666666"
        android:textSize="@dimen/xa30" />

</LinearLayout>