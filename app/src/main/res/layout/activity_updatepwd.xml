<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/headerView"
    tools:context=".activity.UpdatepwdActivity" >
    <include layout="@layout/toobar_title"/>


    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/headerView"
        android:layout_marginTop="@dimen/xa70"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xa117" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="@dimen/xa152"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/xa58"
                android:textSize="@dimen/xa30"
                android:textColor="@color/title_1"
                android:text="@string/m28原密码" />

            <EditText
                android:id="@+id/et_old_password"
                android:layout_width="@dimen/xa515"
                android:layout_height="@dimen/xa89"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/xa11"
                android:layout_toEndOf="@+id/textView1"
                android:background="@drawable/shape_edittext_bg_gray"
                android:ems="10"
                android:paddingStart="@dimen/xa9"
                android:textSize="@dimen/xa28"
                android:inputType="textPassword"
                android:textColor="@color/title_1"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xa117" >

            <TextView
                android:id="@+id/textView2"
                 android:layout_width="@dimen/xa152"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/xa58"
                android:textSize="@dimen/xa30"
                android:textColor="@color/title_1"
                android:text="@string/m26请输入密码" />

            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="@dimen/xa515"
                android:layout_height="@dimen/xa89"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/xa9"
                android:layout_toEndOf="@+id/textView2"
                android:background="@drawable/shape_edittext_bg_gray"
                android:ems="10"
                android:paddingStart="@dimen/xa9"
                android:textSize="@dimen/xa28"
                android:inputType="textPassword"
                android:textColor="@color/title_1"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/xa117" >

            <TextView
                android:id="@+id/textView3"
                 android:layout_width="@dimen/xa152"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/xa58"
                android:textSize="@dimen/xa30"
                android:textColor="@color/title_1"
                android:text="@string/m92重复密码" />

            <EditText
                android:id="@+id/et_repeat_password"
                android:layout_width="@dimen/xa515"
                android:layout_height="@dimen/xa89"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/xa9"
                android:layout_toEndOf="@+id/textView3"
                android:background="@drawable/shape_edittext_bg_gray"
                android:ems="10"
                android:paddingStart="@dimen/xa9"
                android:textSize="@dimen/xa28"
                android:inputType="textPassword"
                android:textColor="@color/title_1"
                 >

            </EditText>
        </RelativeLayout>
    </LinearLayout>


    <Button
        android:id="@+id/bt_finish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa88"
        android:layout_below="@+id/ll_edit"
        android:layout_marginLeft="@dimen/xa75"
        android:layout_marginRight="@dimen/xa75"
        android:layout_marginTop="@dimen/xa49"
        android:background="@drawable/selector_circle_btn_green"
        android:stateListAnimator="@null"
        android:text="@string/m9确定"
        android:textColor="@color/headerView" />

</RelativeLayout>