<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/xa93"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/xa23"
    android:layout_marginRight="@dimen/xa23"
    android:background="@drawable/shape_dialog_background"
    android:gravity="center"
    android:minHeight="@dimen/xa93"
    android:orientation="horizontal" >

    <ProgressBar
        android:id="@+id/loading_img"
        android:layout_width="@dimen/xa70"
        android:layout_height="@dimen/xa70"
        android:indeterminateDrawable="@drawable/progressbar_anim" />

    <TextView
        android:id="@+id/loading_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/xa23"
        android:textColor="#ffffff"
        android:textSize="@dimen/xa37" />

</LinearLayout>