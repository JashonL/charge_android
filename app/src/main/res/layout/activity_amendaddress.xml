<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/headerView"
    tools:context=".activity.AmendsActivity" >
    <include layout="@layout/header_view_title" android:id="@+id/headerView"/>

        <TextView
            android:id="@+id/tvTip"
            android:layout_width="@dimen/xa468"
            android:layout_height="@dimen/ya69"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/title_1"
            android:text="@string/修改手机号"
            android:gravity="center"
            android:layout_marginTop="@dimen/ya83"
            android:textSize="@dimen/xa35"
            />
        <EditText
            android:id="@+id/etText"
            android:layout_width="@dimen/xa468"
            android:layout_height="@dimen/ya69"
            android:background="@drawable/shape_edittext_bg_gray"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/title_3"
            android:gravity="center"
            android:textSize="@dimen/xa35"/>


    <Button
        android:id="@+id/bt_finish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa88"
        android:layout_marginLeft="@dimen/xa75"
        android:layout_marginRight="@dimen/xa75"
        android:layout_marginTop="@dimen/xa49"
        android:background="@drawable/selector_circle_btn_green"
        android:stateListAnimator="@null"
        android:text="@string/all_ok"
        android:textColor="@color/headerView" />

</LinearLayout>