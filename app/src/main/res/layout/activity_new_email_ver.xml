<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/headerView"
    android:orientation="vertical"
    tools:context=".activity.NewEmailVerActivity">
    <include layout="@layout/header_view" android:id="@+id/headerView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa70"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ya111"
        android:layout_marginLeft="@dimen/xa117"
        android:layout_marginRight="@dimen/xa46"
        >

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="@dimen/xa421"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/register_email_no_blank"
            android:paddingLeft="@dimen/xa23"
            android:paddingRight="@dimen/xa23"
            android:gravity="center"
            android:textColor="@color/title_1"
            android:textSize="@dimen/xa30"
            />
        <Button
            android:id="@+id/btnSendCode"
            android:layout_width="@dimen/xa152"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@drawable/selector_rect_btn_green"
            android:padding="@dimen/xa4"
            android:text="@string/m23"
            android:textColor="@color/content_bg_blue"
            android:textSize="@dimen/xa28"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa1"
        android:layout_marginLeft="@dimen/xa46"
        android:layout_marginRight="@dimen/xa46"
        android:background="@color/gray" />

    <EditText
        android:id="@+id/etVCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa58"
        android:layout_marginLeft="@dimen/xa185"
        android:layout_marginRight="@dimen/xa185"
        android:layout_marginTop="@dimen/xa35"
        android:background="@null"
        android:gravity="center"
        android:hint="@string/m21"
        android:paddingLeft="@dimen/xa23"
        android:paddingRight="@dimen/xa23"
        android:textColor="@color/title_1"
        android:textSize="@dimen/xa30" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa1"
        android:layout_marginLeft="@dimen/xa185"
        android:layout_marginRight="@dimen/xa185"
        android:background="@color/gray" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="@dimen/xa468"
        android:layout_height="@dimen/xa93"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/xa140"
        android:background="@drawable/selector_circle_btn_green"
        android:text="@string/about_cache_ok"
        android:textColor="@color/headerView"
        android:textSize="@dimen/xa35" />
</LinearLayout>
