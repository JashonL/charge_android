<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_exception"
    android:layout_width="match_parent"
    android:layout_height="@dimen/xa300"
    android:layout_marginTop="@dimen/xa60"
    android:visibility="visible"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@+id/ll_function">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xa37"
        android:text="Reservation charging"
        android:textColor="#FF343434" />

    <RelativeLayout
        android:layout_width="@dimen/xa690"
        android:layout_height="@dimen/xa200"
        android:layout_marginStart="@dimen/xa30"
        android:layout_marginTop="@dimen/xa30"
        android:layout_marginEnd="@dimen/xa30"
        android:background="@drawable/shape_preinstall_bg">

        <ImageView
            android:id="@+id/iv_green_preinstall"
            android:layout_width="@dimen/xa88"
            android:layout_height="@dimen/xa88"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/xa40"
            android:src="@drawable/ic_green_preinstall" />

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/xa40"
            android:layout_marginTop="@dimen/xa56"
            android:layout_marginEnd="@dimen/xa37"
            android:layout_toEndOf="@+id/iv_green_preinstall"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start time"
                android:textColor="#FF333333"
                android:textSize="@dimen/xa30" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:thumb="@drawable/shape_switch_thumb"
                android:track="@drawable/selector_switch_track" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_time"
            android:layout_marginStart="@dimen/xa40"
            android:layout_marginEnd="@dimen/xa37"
            android:layout_toEndOf="@+id/iv_green_preinstall"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30~12:00"
                android:textColor="#FF009DFF"
                android:textSize="@dimen/xa36" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/xa12"
                android:layout_weight="1"
                android:text=">"
                android:textColor="#FF888888"
                android:textSize="@dimen/xa30" />

            <CheckBox
                android:layout_width="@dimen/xa32"
                android:layout_height="@dimen/xa32"
                android:button="@drawable/selector_cb_state"
                android:checked="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="every day"
                android:textColor="#FF666666"
                android:textSize="@dimen/xa30" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>