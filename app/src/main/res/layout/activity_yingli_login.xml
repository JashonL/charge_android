<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/xa120"
        android:layout_height="@dimen/xa160"
        android:layout_marginTop="@dimen/xa31"
        android:src="@drawable/yingli_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xa30"
        android:layout_marginTop="@dimen/xa50"
        android:layout_marginEnd="@dimen/xa30"
        android:focusable="false"
        android:backgroundTintMode="multiply"
        android:theme="@style/CustomAppTheme_textInputLayout"
        style="CustomAppTheme_textInputLayout"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/sign_user"
            android:drawablePadding="8dp"
            android:hint="@string/m25请输入用户名"
            android:paddingBottom="@dimen/xa30"
            android:textColor="@color/white_background"
            android:textColorHint="@color/white_background"
            android:textSize="@dimen/size_content_sp_14" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xa30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/xa30"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/title_settings_dialog"
        android:theme="@style/CustomAppTheme_textInputLayout"
        style="CustomAppTheme_textInputLayout"
        app:passwordToggleEnabled="true"
        app:layout_constraintTop_toBottomOf="@+id/til_user">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/sign_password"
            android:drawablePadding="8dp"
            android:paddingBottom="@dimen/xa30"
            android:textSize="@dimen/size_content_sp_14" />

    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>