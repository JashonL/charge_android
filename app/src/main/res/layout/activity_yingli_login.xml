<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/xa120"
        android:layout_height="@dimen/xa160"
        android:layout_marginTop="@dimen/xa200"
        android:src="@drawable/yingli_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/ll_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa90"
        android:layout_marginLeft="@dimen/xa30"
        android:layout_marginTop="@dimen/xa50"
        android:layout_marginRight="@dimen/xa30"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/xa24"
        android:paddingRight="@dimen/xa24"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/xa50"
            android:layout_height="@dimen/xa50"
            android:src="@drawable/sign_user" />


        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/xa12"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:hint="@string/m25请输入用户名"
            android:textColor="@color/white_background"
            android:textColorHint="@color/white_background"
            android:textSize="@dimen/size_content_sp_14" />
    </LinearLayout>


    <View
        android:id="@+id/v_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa2"
        android:layout_marginLeft="@dimen/xa30"
        android:layout_marginRight="@dimen/xa30"
        android:background="@color/white_background"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/ll_username" />

    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa90"
        android:layout_marginLeft="@dimen/xa30"
        android:layout_marginTop="@dimen/xa30"
        android:layout_marginRight="@dimen/xa30"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/xa24"
        android:paddingRight="@dimen/xa24"
        app:layout_constraintTop_toBottomOf="@+id/v_username">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/xa50"
            android:layout_height="@dimen/xa50"
            android:src="@drawable/sign_password" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/xa12"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:hint="@string/m26请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/white_background"
            android:textColorHint="@color/white_background"
            android:textSize="@dimen/size_content_sp_14" />
    </LinearLayout>


    <View
        android:id="@+id/v_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa2"
        android:layout_marginLeft="@dimen/xa30"
        android:layout_marginRight="@dimen/xa30"
        android:background="@color/white_background"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/ll_password" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa88"
        android:layout_marginLeft="@dimen/xa75"
        android:layout_marginTop="@dimen/xa49"
        android:layout_marginRight="@dimen/xa75"
        android:background="@drawable/selector_white_circle"
        android:stateListAnimator="@null"
        android:text="@string/m24登陆"
        android:textColor="@color/main_theme_text_color"
        app:layout_constraintTop_toBottomOf="@+id/v_password" />


    <Button
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa88"
        android:layout_marginLeft="@dimen/xa75"
        android:layout_marginTop="@dimen/xa49"
        android:layout_marginRight="@dimen/xa75"
        android:background="@drawable/selector_white_stroke"
        android:stateListAnimator="@null"
        android:text="@string/m23注册"
        android:textColor="@color/white_background"
        app:layout_constraintTop_toBottomOf="@+id/bt_login" />

    <TextView
        android:id="@+id/tv_foget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ya40"
        android:gravity="center"
        android:text="@string/m22忘记密码"
        android:textColor="@color/white_background"
        android:textSize="@dimen/xa30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_register" />

</androidx.constraintlayout.widget.ConstraintLayout>