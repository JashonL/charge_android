<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background2"
    android:orientation="vertical"
    tools:context=".activity.UserActivity">

    <include layout="@layout/header_view" />

    <RelativeLayout
        android:id="@+id/rl_edit_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa120"
        android:layout_marginTop="@dimen/xa30"
        android:background="@drawable/selector_list_rect_item_click">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xa14"
            android:text="@string/updatepwd_title"
            android:textColor="#333333"
            android:textSize="@dimen/xa30" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/xa70"
            android:layout_height="@dimen/xa35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xa25"
            android:src="@drawable/charger_device_item_more" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/xa1"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_background2"
            android:orientation="vertical" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa120"
        android:background="@drawable/selector_list_rect_item_click">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/xa14"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/修改手机号"
                android:textColor="#333333"
                android:textSize="@dimen/xa30" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/xa14"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/xa30" />

        </LinearLayout>


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/xa70"
            android:layout_height="@dimen/xa35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xa25"
            android:src="@drawable/charger_device_item_more" />


        <View
            android:id="@+id/frad_linear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xa1"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_background2"
            android:orientation="vertical" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_edit_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa120"
        android:background="@drawable/selector_list_rect_item_click">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/xa14"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/修改邮箱"
                android:textColor="#333333"
                android:textSize="@dimen/xa30" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/xa14"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/xa30" />

        </LinearLayout>


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/xa70"
            android:layout_height="@dimen/xa35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xa25"
            android:src="@drawable/charger_device_item_more" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/xa1"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_background2"
            android:orientation="vertical" />

    </RelativeLayout>


</LinearLayout>
