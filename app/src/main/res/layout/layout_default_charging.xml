<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_default_charging"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/xa62"
    android:orientation="vertical"
    android:visibility="gone"
    app:layout_constraintTop_toBottomOf="@+id/ll_function">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa128"
        android:layout_marginStart="@dimen/xa31"
        android:layout_marginTop="@dimen/xa31"
        android:layout_marginEnd="@dimen/xa28"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_rl_1_bg">

            <ImageView
                android:id="@+id/iv_kwh"
                android:layout_width="@dimen/xa64"
                android:layout_height="@dimen/xa64"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/xa40"
                android:src="@drawable/ic_electricity" />


            <TextView
                android:id="@+id/tv_kwh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/xa39"
                android:layout_marginTop="@dimen/xa22"
                android:layout_toEndOf="@+id/iv_kwh"
                android:text="@string/m189已充电量"
                android:textColor="#ff666666"
                android:textSize="@dimen/xa28" />

            <TextView
                android:id="@+id/tv_electricity_kwh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_kwh"
                android:layout_marginStart="@dimen/xa39"
                android:layout_toEndOf="@+id/iv_kwh"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="@dimen/xa36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_kwh"
                android:layout_marginStart="@dimen/xa4"
                android:layout_marginTop="@dimen/xa10"
                android:layout_toEndOf="@+id/tv_electricity_kwh"
                android:text="kWh"
                android:textColor="#ff333333"
                android:textSize="@dimen/xa28" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/xa31"
            android:layout_weight="1"
            android:background="@drawable/shape_rl_2_bg">

            <ImageView
                android:id="@+id/iv_rate"
                android:layout_width="@dimen/xa64"
                android:layout_height="@dimen/xa64"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/xa40"
                android:src="@drawable/ic_rate" />


            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/xa39"
                android:layout_marginTop="@dimen/xa22"
                android:layout_toEndOf="@+id/iv_rate"
                android:text="@string/m190充电费率"
                android:textColor="#ff666666"
                android:textSize="@dimen/xa28" />

            <TextView
                android:id="@+id/tv_rate_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rate"
                android:layout_marginStart="@dimen/xa39"
                android:layout_toEndOf="@+id/iv_rate"
                android:text="0"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#ff333333"
                android:textSize="@dimen/xa36" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa128"
        android:layout_marginStart="@dimen/xa31"
        android:layout_marginTop="@dimen/xa29"
        android:layout_marginEnd="@dimen/xa28"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_rl_3_bg">


            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="@dimen/xa64"
                android:layout_height="@dimen/xa64"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/xa40"
                android:src="@drawable/ic_time" />


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/xa39"
                android:layout_marginTop="@dimen/xa22"
                android:layout_toEndOf="@+id/iv_time"
                android:text="@string/m191已充时长"
                android:textColor="#ff666666"
                android:textSize="@dimen/xa28" />

            <TextView
                android:id="@+id/tv_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_time"
                android:layout_marginStart="@dimen/xa39"
                android:layout_toEndOf="@+id/iv_time"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="@dimen/xa36" />

            <TextView
                android:id="@+id/tv_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_time"
                android:layout_marginStart="@dimen/xa4"
                android:layout_marginTop="@dimen/xa10"
                android:layout_toEndOf="@+id/tv_hour"
                android:text="h"
                android:textColor="#ff333333"
                android:textSize="@dimen/xa28" />

            <TextView
                android:id="@+id/tv_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_time"
                android:layout_marginStart="@dimen/xa4"
                android:layout_toEndOf="@+id/tv_h"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="@dimen/xa36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_time"
                android:layout_marginStart="@dimen/xa4"
                android:layout_marginTop="@dimen/xa10"
                android:layout_toEndOf="@+id/tv_min"
                android:text="min"
                android:textColor="#ff333333"
                android:textSize="@dimen/xa28" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/xa31"
            android:layout_weight="1"
            android:background="@drawable/shape_rl_4_bg">

            <ImageView
                android:id="@+id/iv_money"
                android:layout_width="@dimen/xa64"
                android:layout_height="@dimen/xa64"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/xa40"
                android:src="@drawable/ic_money" />


            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/xa39"
                android:layout_marginTop="@dimen/xa22"
                android:layout_toEndOf="@+id/iv_money"
                android:text="@string/m192消费金额"
                android:textColor="#ff666666"
                android:textSize="@dimen/xa28" />

            <TextView
                android:id="@+id/tv_money_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_money"
                android:layout_marginStart="@dimen/xa39"
                android:layout_toEndOf="@+id/iv_money"
                android:text="00"
                android:textColor="#ff333333"
                android:textSize="@dimen/xa36" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_default_av"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa128"
        android:layout_marginStart="@dimen/xa31"
        android:layout_marginTop="@dimen/xa30"
        android:layout_marginEnd="@dimen/xa28"
        android:layout_marginBottom="@dimen/xa40"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_rl_5_bg">

            <ImageView
                android:id="@+id/iv_a"
                android:layout_width="@dimen/xa64"
                android:layout_height="@dimen/xa64"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/xa40"
                android:src="@drawable/ic_a" />


            <TextView
                android:id="@+id/tv_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/xa39"
                android:layout_marginTop="@dimen/xa22"
                android:layout_toEndOf="@+id/iv_a"
                android:text="@string/m193当前电流"
                android:textColor="#ff666666"
                android:textSize="@dimen/xa28" />

            <TextView
                android:id="@+id/tv_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_a"
                android:layout_marginStart="@dimen/xa39"
                android:layout_toEndOf="@+id/iv_a"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="@dimen/xa36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_a"
                android:layout_marginStart="@dimen/xa4"
                android:layout_marginTop="@dimen/xa8"
                android:layout_toEndOf="@+id/tv_current"
                android:text="A"
                android:textColor="#ff333333"
                android:textSize="@dimen/xa28" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/xa31"
            android:layout_weight="1"
            android:background="@drawable/shape_rl_6_bg">

            <ImageView
                android:id="@+id/iv_voltage"
                android:layout_width="@dimen/xa64"
                android:layout_height="@dimen/xa64"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/xa40"
                android:src="@drawable/ic_voltage" />


            <TextView
                android:id="@+id/tv_voltage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/xa39"
                android:layout_marginTop="@dimen/xa22"
                android:layout_toEndOf="@+id/iv_voltage"
                android:text="@string/m194当前电压"
                android:textColor="#ff666666"
                android:textSize="@dimen/xa28" />

            <TextView
                android:id="@+id/tv_voltage_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_voltage"
                android:layout_marginStart="@dimen/xa39"
                android:layout_toEndOf="@+id/iv_voltage"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="@dimen/xa36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_voltage"
                android:layout_marginStart="@dimen/xa4"
                android:layout_marginTop="@dimen/xa8"
                android:layout_toEndOf="@+id/tv_voltage_values"
                android:text="V"
                android:textColor="#ff333333"
                android:textSize="@dimen/xa28" />
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_charging_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/xa69"
        android:layout_marginBottom="@dimen/xa40"
        android:gravity="center"
        android:text="@string/please_pull_down_and_reset_the_charging_gun"
        android:textColor="#ff888888"
        android:textSize="@dimen/xa28"
        android:visibility="gone" />

</LinearLayout>