<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/xa560"
    android:layout_height="@dimen/xa460"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/xa30"
        android:gravity="center"
        android:text="@string/m27温馨提示"
        android:textColor="@color/black"
        android:textSize="@dimen/xa30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/xa30"
        android:text="@string/m26请输入密码"
        android:textSize="@dimen/xa24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/xa30"
        android:layout_height="@dimen/xa80"
        android:layout_marginStart="@dimen/xa40"
        android:layout_marginEnd="@dimen/xa40"
        android:background="#E5E5E5">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/m26请输入密码"
            android:textColor="@color/black"
            android:textSize="@dimen/xa26" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa2"
        android:layout_marginTop="@dimen/xa60"
        android:background="#E5E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/headerView"
            android:gravity="center"
            android:text="@string/m7取消"
            android:textColor="#666666"
            android:textSize="@dimen/xa30" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/headerView"
            android:gravity="center"
            android:text="@string/m9确定"
            android:textColor="@color/black"
            android:textSize="@dimen/xa30" />

    </LinearLayout>


</LinearLayout>