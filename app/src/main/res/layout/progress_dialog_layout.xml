<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="@dimen/xa300"
        android:layout_height="@dimen/xa300"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/progress" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="ssss"
        android:textColor="@color/maincolor_2"
        android:textSize="@dimen/xa36" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/xa90"
        android:gravity="center"
        android:text="@string/m7取消"
        android:background="@drawable/selector_circle_btn_green_gradient"
        android:textColor="@color/white_background"
        android:textSize="15sp" />



</RelativeLayout>
